<!DOCTYPE html>

<html>
 <body>
      <style>
            body {
                background-color: skyblue;
                background-size: auto;        
            }
      </style> 

   <h1>Create User</h1>
    <%= form_for(:session) do |f| %>
      <%= f.label :username %>
      <%= f.text_field :name %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
 </body>  
</html>
