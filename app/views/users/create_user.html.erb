<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.name :name %>

      <%= f.label :password %>
      <%= f.password :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
