

<html>
    <head>
        <style>

            .title-box{
                font-family: relative;
                position: absolute;
                margin: auto;
                top: 10%;
                left: 50%;
                font-size: 150%;
                font-weight: bold;
                background-color: black;
                color: white;
                padding: 20px;
                transform: translate(-50%, -50%);
            
            }    
        
            .text-box {
                font-family: relative;
                position: absolute;
                margin: auto;
                top: 50%;
                left: 50%;
                background-color: black;
                color: white;
                padding: 20px;
                transform: translate(-50%, -50%);
            }
        </style>
    </head>

    <body>
    
      <style>
            body {
                background-image: url(<%= asset_path "login.png" %>);
                background-repeat: no-repeat;
                background-size: auto;        
            }
        </style> 
           <div class = "title-box">
                <p>The Black Olive</p>
           </div>
        <div class= "text-box">
            


          
     <%= form_for(:session, url: "/login") do |f| %>

      <%= f.label :username %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

        <button onclick="location.href='welcome/user'" type="button"> Create User</button>
        </div>
    </body>

</html>
